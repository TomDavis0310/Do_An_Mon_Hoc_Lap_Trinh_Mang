# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Markdown files
[*.md]
trim_trailing_whitespace = false

# HTML, Layouts
[*.html]
indent_style = space
indent_size = 4

# CSS
[*.css]
indent_style = space
indent_size = 4

# JavaScript
[*.js]
indent_style = space
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# TOML
[*.toml]
indent_style = space
indent_size = 2

# JSON
[*.json]
indent_style = space
indent_size = 2

# Go templates
[*.tmpl]
indent_style = space
indent_size = 4

# Makefile
[Makefile]
indent_style = tab
